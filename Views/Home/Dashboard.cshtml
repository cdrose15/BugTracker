<div class="col-md-12 mypage-header ">
    @if (User.IsInRole("Administrator") || User.IsInRole("Project Manager"))
    {
    @Html.ActionLink("New Project", "DashboardCreate", "Projects", null, new { @class = "btn btn-default btn-lg" })
    }
    @Html.ActionLink("New Ticket", "Create", "Tickets", null, new { @class = "btn btn-default btn-lg" })
</div>

<div class="col-md-12">
    <div class="mypage-header panel-heading">
        @if (User.IsInRole("Administrator") || User.IsInRole("Project Manager"))
        {
        <h3>Tickets Needing Assigned</h3>
        }
        @if (User.IsInRole("Developer"))
        {
            <h3>Tickets Needing Resolved</h3>
        }
        @if (User.IsInRole("Submitter"))
        {
            <h3>Active Tickets</h3>
        }
    </div>
</div>
<div class="container">
    <div class="row">
        @if (User.IsInRole("Administrator"))
        {
            <div class="col-md-2">
                @Html.Action("_DashboardUsers", "Users")
            </div>
        }
            <div class="col-md-10">
                @Html.Action("_DashboardTickets", "Tickets")
            </div>

        </div>

    </div>

@section scripts{
    <script type="text/javascript">
        $('#tickets').DataTable({
            "paging": true,
            "pageLength": 5,
            "bLengthChange": false,
            "info": false,
            "bFilter": false,
            //"ordering": false,
            "pagingType": "numbers",
            "searching": true
        });
    </script>
}