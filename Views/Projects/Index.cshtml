@model IEnumerable<BugTracker.Models.CodeFirst.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Project List</h2>

<p>
    @if (User.IsInRole("Administrator") || User.IsInRole("Project Manager"))
    {
        @Html.ActionLink("New Project", "Create", null, new { @class = "btn btn-default" })
    }
</p>
<div container>
    <div class="col-md-6">
<table id="projects">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.IsInRole("Administrator") || User.IsInRole("Project Manager"))
                {
                    <button class="assign-user btn btn-default" data-id="@item.Id" >Assign Users</button>
                    @Html.ActionLink("Assign Users", "ProjectUsers", new { id = item.Id, }, new { @class = "btn btn-default" })
                }
                @if (User.IsInRole("Administrator") || User.IsInRole("Project Manager"))
                {
                    @Html.ActionLink("Edit Project", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                }
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })*@
            </td>
        </tr>
    }
        </tbody>
</table>
</div>
    <div id="assign"></div>
</div>

@section scripts{
    <script type="text/javascript">

        $('.assign-user').click(function () {
            $('#assign').load('/Projects/_ProjectUsers/' + $(this).data('id'));
        });

        $('#projects').DataTable({
            "paging": true,
            "pageLength": 10,
            "bLengthChange": false,
            "info": false,
            "bFilter": false,
            "ordering": false,
            "pagingType": "numbers",
            "searching": true
        });
    </script>
    }