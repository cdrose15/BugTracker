@model BugTracker.Models.AssignProjectsViewModel 

<div class="container">
    <div class="col-md-12">
        <div class="mypage-header panel-heading">
            <h3>Manage @Model.Project.Name</h3>
        </div>
        <div class="row mypage-header">
            @Html.ActionLink("Back","Index")
        </div>
    </div>

    <div class="col-md-6">
        <div>
            <div class="panel-heading">
                <h4>Assign Users</h4>
            </div>
            @using (Html.BeginForm("ProjectUsers", "Projects"))
            {
                @Html.HiddenFor(model => model.Project.Id)

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.ListBox("SelectedUsers", Model.Users, new { @id = "multi" })
                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
    @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
        </div>*@
    <div class="col-md-6">
        @Html.Action("_Edit", "Projects", new { id = Model.Project.Id })
    </div>
</div>


@*<div>
    @Html.ActionLink("Back", "Index")
</div>*@
