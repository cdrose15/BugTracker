}*@

@section scripts{
    <script src="~/Scripts/bootstrap-multiselect.js"></script>

    <script type="text/javascript">
    $(document).ready(function() {
        $('#multi').multiselect({
            buttonWidth: '240px'
        });
    });
    </script>

}