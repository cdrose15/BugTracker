@model BugTracker.Models.AssignTicketsViewModel

<div class="container">
    <div class="col-md-12">
        <div class="mypage-header panel-heading">
            <h3>Manage @Model.Ticket.Title</h3>
        </div>
        <div class="row mypage-header">
            @Html.ActionLink("Back", "Index")
        </div>
    </div>

    <div class="col-md-6">
        <div>
            <div class="panel-heading">
                <h4>Assign User</h4>
            </div>
            @using (Html.BeginForm("AssignUser", "Tickets"))
            {
                @*@Html.HiddenFor(model => model.Ticket.Id)*@

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DropDownList("SelectedUser", Model.Users)
                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>