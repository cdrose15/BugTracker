<div class="col-md-8">
    <h4><b>History Log</b></h4>
    <table class="table">
            <thead>
                <tr>
                    <th>Edit Date</th>
                    <th>User</th>
                    <th>Property</th>
                    <th>Old Value</th>
                    <th>New Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var log in Model.TicketLogs)
                { 
                <tr>
                    <td>@log.ChangedDate.ToString("MM/dd/yyyy")</td>
                    <td>@log.User.DisplayName</td>
                    <td>@log.Property</td>
                    <td>@log.OldFieldValue</td>
                    <td>@log.NewFieldValue</td>
