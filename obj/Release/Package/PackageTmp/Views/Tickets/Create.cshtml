@model BugTracker.Models.CodeFirst.Ticket

<div class="col-md-12">
    <div class="mypage-header panel-heading">
        <h3>Create Ticket</h3>
    </div>
    <div class="mypage-header">
        @Html.ActionLink("Back", "Index")
